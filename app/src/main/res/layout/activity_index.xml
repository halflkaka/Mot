<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shicanjie.xmot.IndexActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/search_word"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight = "1"
                android:hint="   输入要查询的单词" />
            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="查找"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:src="@drawable/bonjour"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:src="@drawable/startword"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/rocket_button"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:src="@drawable/rocketword"
            android:layout_margin="5dp" />
        <ImageButton
            android:id="@+id/set_button"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:src="@drawable/setword"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
